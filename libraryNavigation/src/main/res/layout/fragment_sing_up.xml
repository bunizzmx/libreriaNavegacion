<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7FB"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_22sdp">

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:indeterminateTint="@color/login_purple"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bSignUp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_bold"
            android:text="@string/txt_register"
            android:textColor="#1D262A"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_regular"
            android:gravity="start"
            android:text="@string/txt_mail"
            android:textColor="#1D262A"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt1"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_regular"
            android:gravity="start"
            android:text="@string/label_name"
            android:textColor="#263238"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/et_name"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/selector_edittext"
            android:fontFamily="@font/gotham_pro_regular"
            android:hint="@string/hint_name"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:padding="12dp"
            android:textColor="@color/color_text_black_subtitle"
            android:textColorHint="@color/basic_gray"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_name" />

        <TextView
            android:id="@+id/tv_valid_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_regular"
            android:gravity="start"
            android:text="@string/txt_validationName"
            android:textColor="#CC3333"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_label_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_regular"
            android:gravity="start"
            android:text="@string/label_lastname"
            android:textColor="#263238"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_valid_name" />

        <EditText
            android:id="@+id/et_lastname"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/selector_edittext"
            android:fontFamily="@font/gotham_pro_regular"
            android:hint="@string/hint_lastname"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:padding="12dp"
            android:textColor="@color/color_text_black_subtitle"
            android:textColorHint="@color/basic_gray"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_lastname" />

        <TextView
            android:id="@+id/tv_valid_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_regular"
            android:gravity="start"
            android:text="@string/txt_validationLastname"
            android:textColor="#CC3333"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_lastname"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_regular"
            android:gravity="start"
            android:text="@string/enter_mail"
            android:textColor="#263238"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_valid_lastname" />

        <EditText
            android:id="@+id/et_email"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/selector_edittext"
            android:fontFamily="@font/gotham_pro_regular"
            android:hint="@string/email_txt"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/color_text_black_subtitle"
            android:textColorHint="@color/basic_gray"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_2" />

        <TextView
            android:id="@+id/txt_validEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gotham_pro_regular"
            android:gravity="start"
            android:text="@string/txt_validationEmail"
            android:textColor="#CC3333"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email">

            <CheckBox
                android:id="@+id/cbPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/checkbox"
                android:checked="true"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                app:useMaterialThemeColors="false" />

            <TextView
                android:id="@+id/txtPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/gotham_pro_regular"
                android:text="@string/promo_login"
                android:textColor="@color/basic_black"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/et_email"
                app:useMaterialThemeColors="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/checkbox"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                app:useMaterialThemeColors="false" />

            <TextView
                android:id="@+id/txtTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/gotham_pro_regular"
                android:text="@string/terms_login"
                android:textColor="@color/basic_black"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/et_email"
                app:useMaterialThemeColors="false" />

        </LinearLayout>

        <Button
            android:id="@+id/bSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/selector_button_disable"
            android:enabled="false"
            android:fontFamily="@font/gotham_pro_medium"
            android:text="@string/continue_txt"
            android:textColor="@color/color_gray_text_disable"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_44sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:src="@drawable/page_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bSignUp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>